<form action="" method="POST" class="form-horizontal">
	<div class="form-group">
		<label class="col-lg-1 control-label">Name</label>
		<div class="col-lg-5">
			<input type="text" class="form-control" name="name" <% if @name %> value="<%= @name %>" <% end %>>
		</div>
	</div>
	<div class="form-group">
		<label class="col-lg-1 control-label">File</label>
		<div class="col-lg-5">
			<input type="text" class="form-control" name="file" <% if @file %> value="<%= @file %>" <% end %>>
		</div>
	</div>
	<div class="form-group">
		<label class="col-lg-1 control-label">Thumb</label>
		<div class="col-lg-5">
			<input type="text" class="form-control" name="thumb" <% if @thumb %> value="<%= @thumb %>" <% end %>>
		</div>
	</div>
	<div class="form-group">
		<label class="col-lg-1 control-label">Type</label>
		<div class="col-lg-5">
			<select name="type" class="form-control">
				<option value="flash" <% if @type == "flash" %>selected<% end %>>Flash</option>
				<option value="download" <% if @type != "flash" %>selected<% end %>>Downloadable</option>
			</select>
		</div>
	</div>
	<div class="form-group">
		<div class="col-lg-1 col-lg-offset-1">
			<input type="submit" class="btn btn-success" value="Edit">
		</div>
		<div class="col-lg-2">
			<a href="/game/<%=@slug%>/admin/delete" class="btn btn-danger">Delete</a>
		</div>
	</div>
</form>